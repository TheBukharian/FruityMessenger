<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/imageview_latestmessage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/username_textView_latestmessage"
        android:layout_width="191dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:text="Username"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageview_latestmessage"
        app:layout_constraintTop_toTopOf="@+id/imageview_latestmessage" />

    <TextView
        android:id="@+id/message_textView_latestmessage"
        android:layout_width="152dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:text="Latest messages of the users "
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_latestmessage"
        app:layout_constraintStart_toStartOf="@+id/username_textView_latestmessage"
        app:layout_constraintTop_toBottomOf="@+id/username_textView_latestmessage" />
</androidx.constraintlayout.widget.ConstraintLayout>