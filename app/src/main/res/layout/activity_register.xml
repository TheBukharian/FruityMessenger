<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterLogin.RegisterActivity">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/NameText"
            android:layout_width="355dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="50dp"
            android:autofillHints=""
            android:background="@drawable/circled_angles"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingLeft="23dp"
            android:textColor="#9C525252" />

        <EditText
            android:id="@+id/EmailText"
            android:layout_width="355dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:autofillHints=""
            android:background="@drawable/circled_angles"
            android:hint="Email"
            android:inputType="textPersonName"

            android:paddingStart="23dp"
            android:textColor="#9C525252" />

        <EditText
            android:id="@+id/PasswordText"
            android:layout_width="355dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:autofillHints=""
            android:background="@drawable/circled_angles"
            android:hint="Create a password..."
            android:inputType="textPassword"

            android:paddingLeft="23dp"
            android:textColor="#9C525252" />

        <Button
            android:id="@+id/RegBtn"
            android:layout_width="333dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginTop="74dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/buttons_shape"
            android:text="Register"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/Already"
            android:layout_width="250dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:linksClickable="true"
            android:text="Already have an account?"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorLink="#fff"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/PhotoBtn"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-570dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/shadow"
            android:fontFamily="sans-serif-black"
            android:shadowColor="#fff"
            android:text="Select Photo"
            android:textColor="#2D000000" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/PhotoImageView"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-115dp"
            android:layout_marginEnd="50dp"
            app:civ_border_color="#fff"
            app:civ_border_width="3dp" />

        <ImageButton
            android:id="@+id/deleteImageBtn"
            android:layout_width="54dp"
            android:layout_height="57dp"
            android:layout_gravity="end"
            android:layout_marginTop="-50dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/rubishbtn"
            android:visibility="gone"
            app:srcCompat="@android:drawable/ic_menu_delete" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:layout_marginTop="325dp"
            app:srcCompat="@drawable/kkk" />

        <ImageView
            android:id="@+id/imageViewLiquid"
            android:layout_width="153dp"
            app:layout_constraintTop_toBottomOf="@id/PhotoBtn"
            app:layout_constraintLeft_toLeftOf="@id/PhotoBtn"
            app:layout_constraintRight_toRightOf="@id/PhotoBtn"

            android:layout_height="205dp"
            android:layout_marginTop="-812dp"
            android:layout_marginLeft="120dp"
            app:srcCompat="@drawable/liquid" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>